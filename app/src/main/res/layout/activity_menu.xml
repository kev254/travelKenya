<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MenuActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        style="@style/AppTheme.AppBarOverlay"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            style="@style/AppTheme.PopupOverlay"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar">
            <TextView
                android:id="@+id/UserEmail"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Hotels in Nairobi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scrollbars="none"
                android:scrollbarSize="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel1"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Serena Hotel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel2"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Hilton Hotel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel3"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Las Vegas Hotel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel4"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Dans Hotel"/>
                    </LinearLayout>



                </LinearLayout>


            </HorizontalScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Charming hotels in Kisii"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scrollbars="none"
                android:scrollbarSize="0dp"
                android:scrollbarAlwaysDrawHorizontalTrack="false"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel5"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Mwalimu Hotel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel6"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Victoria Visit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel7"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Dela Pork"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="230dp"
                            android:src="@drawable/hotel8"
                            android:foreground="@drawable/image_foreground2"
                            android:layout_height="140dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:textColor="#5E5757"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"
                            android:text="Peak Point"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="see more"/>
                    </LinearLayout>



                </LinearLayout>



            </HorizontalScrollView>


            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Most visited places "
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#050505"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>


<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recylerView" />

    </LinearLayout>
    </ScrollView>

    </LinearLayout>









