<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

       <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:src="@drawable/adventures"
            android:layout_height="200dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enjoy the Kenyan Geo Nature"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#1B5E20"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kenya is a leading tourist destination in Africa with millions of tourists visiting each year.Enjoy the endless savannah and the animals that inhabit it."
            android:textAlignment="center"
            android:textColor="#000"
            android:gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>